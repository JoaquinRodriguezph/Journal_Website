<h1 class="mb-4">Admin Dashboard</h1>

<!-- Users Table -->
<div class="card mb-5">
    <div class="card-header">
        <h3><i class="fas fa-users me-2"></i>All Users (<%= users.length %>)</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><span class="badge bg-<%= user.role === 'admin' ? 'success' : 'secondary' %>"><%= user.role %></span></td>
                            <td>
                                <% if (user.isSuspended) { %>
                                    <span class="badge bg-danger">Suspended</span>
                                <% } else { %>
                                    <span class="badge bg-success">Active</span>
                                <% } %>
                            </td>
                            <td>
                                <form action="/admin/users/suspend/<%= user._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-warning"><i class="fas fa-ban"></i></button>
                                </form>
                                <form action="/admin/users/delete/<%= user._id %>" method="POST" class="d-inline" onsubmit="return confirm('DELETE USER? This will also delete all their posts.');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Entries Table -->
<div class="card">
    <div class="card-header">
       <h3><i class="fas fa-book me-2"></i>All Entries (<%= entries.length %>)</h3>
    </div>
    <div class="card-body">
         <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% entries.forEach(entry => { %>
                        <tr>
                            <td><%= entry.title %></td>
                            <td><%= entry.author.name %> (<%= entry.author.email %>)</td>
                            <td><%= new Date(entry.createdAt).toLocaleDateString() %></td>
                            <td>
                                <!-- Admin entry deletion will need a new route -->
                                <form action="/admin/entries/delete/<%= entry._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
